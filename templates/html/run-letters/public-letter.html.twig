<!DOCTYPE html>
<html lang="en">
<head>
    <title>QT.run</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#F26822">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="article">
    <meta property="og:title" content="QT.run">
    <meta property="og:description" content="{{ letter.getLetterText()|slice(0, 150) }}...">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="QT.run">
    <meta name="twitter:description" content="{{ letter.getLetterText()|slice(0, 150) }}...">

    <link rel="icon" type="image/jpeg" href="/assets/images/logo.jpg">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3/dist/tailwind.min.css" rel="stylesheet"/>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        }
        .serif {
            font-family: Georgia, 'Times New Roman', serif;
        }
    </style>
</head>
<body class="bg-white">
    <div class="min-h-screen py-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-2xl mx-auto">
            <!-- Letter Card -->
            <div class="space-y-12">
                <!-- Date -->
                <div class="text-center">
                    <p class="text-xs text-gray-400 uppercase tracking-widest mb-4">{{ activity.getSportType().value }}</p>
                    <h2 class="text-2xl font-light text-gray-900 serif">
                        {{ activity.getStartDate().formatLocalized('%B %e, %Y') }}
                    </h2>
                </div>

                <!-- Letter Text -->
                <div class="max-w-xl mx-auto">
                    <p class="text-lg leading-relaxed text-gray-800 serif text-center">
                        {{ letter.getLetterText() }}
                    </p>
                </div>

                <!-- Activity Stats -->
                <div class="flex justify-center gap-12 py-8 border-t border-gray-100">
                    <div class="text-center">
                        <p class="text-xl font-light text-gray-900">{{ activity.getDistanceInKilometer().getFormatted() }}</p>
                        <p class="text-xs text-gray-400 mt-1 uppercase tracking-wide">Distance</p>
                    </div>
                    <div class="text-center">
                        <p class="text-xl font-light text-gray-900">{{ activity.getFormattedMovingTime() }}</p>
                        <p class="text-xs text-gray-400 mt-1 uppercase tracking-wide">Time</p>
                    </div>
                    <div class="text-center">
                        <p class="text-xl font-light text-gray-900">{{ activity.getFormattedAverageSpeed() }}</p>
                        <p class="text-xs text-gray-400 mt-1 uppercase tracking-wide">Pace</p>
                    </div>
                </div>

                <!-- Footer -->
                <div class="text-center text-xs text-gray-300 border-t border-gray-100 pt-8">
                    <p>{{ athlete.getName() }}</p>
                    {% if letter.wasEdited() %}
                        <p class="mt-1">{{ letter.getEditedAt().formatLocalized('%B %e, %Y') }}</p>
                    {% else %}
                        <p class="mt-1">{{ letter.getGeneratedAt().formatLocalized('%B %e, %Y') }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</body>
</html>
